{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>

    <table  class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Date Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td><a href="{{ path('post_show', { 'slug': post.slug }) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.text }}</td>
                <td>{{ post.updated | date('d.M.Y') }}  </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('post_show', { 'slug': post.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('post_edit', { 'slug': post.slug }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('post_new') }}">Create a new post</a>
        </li>
    </ul>
{% endblock %}
