{% set loc = app.request.getLocale() %}
{% set pag = app.request.attributes.get('_route') %}
{% set pag2 = app.request.attributes.get('slug') %}

<nav class="navbar navbar-default"  role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path("runner") }}">{{ 'Homepage' | trans }}</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ path('post_index') }}">{{ 'Posts' | trans }}</a>
                </li>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <p class="navbar-text">
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                    </p>
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    </li>
                {% endif %}
                    <li>
                        <a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
                    </li>
                <li>
                <li class="dropdown">
                    <a href="#" data-toggle="dropdown" class="dropdown-toggle">{{ 'Language' | trans }}<b class="caret"></b></a>
                    <ul class="dropdown-menu">

                        <li{% if loc =="en" %} class='active'{% endif %}><a href="{{ path('startpage', {"_locale":"en", "last":pag, "slug":pag2 }) }}">English</a></li>
                        <li{% if loc =="fr" %} class='active'{% endif %}><a href="{{ path('startpage', {"_locale":"fr", "last":pag, "slug":pag2 }) }}">French</a></li>
                        <li{% if loc =="nl" %} class='active'{% endif %}><a href="{{ path('startpage', {"_locale":"nl", "last":pag, "slug":pag2 }) }}">Dutch</a></li>

                    </ul>
                </li>
                <li>
                    <form class="navbar-form" role="search" name="search" id="search" action="{{ path('post_match') }}" method="POST">
                      <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="term" id="srch-term">
                            <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </li> 
            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>

