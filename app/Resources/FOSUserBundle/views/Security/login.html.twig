{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div style="width: 30%" class="center-block">

    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    <h2 class="form-signin-heading">Please sign in</h2>
    <form action="{{ path("fos_user_security_check") }}" class="form-signin" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label for="_username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" autofocus />

        <label for="_password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <input type="password" id="password" name="_password" required="required" class="form-control" required="required"/>

        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        <br>
        <input type="submit" id="_submit" class="btn btn-primary btn-block btn-lg" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    </form>
{% endblock fos_user_content %}